@namespace AntdMangement.Components
@inherits AntDomComponentBase

<div class="trendItem">
    <span>@ChildContent</span>
    <span class="@Flag">
        @if (Flag == "up")
        {
            <Icon Type="caret-up" />
        }
        else
        {
            <Icon Type="caret-down" />
        }
    </span>
</div>
@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Flag { get; set; }
}